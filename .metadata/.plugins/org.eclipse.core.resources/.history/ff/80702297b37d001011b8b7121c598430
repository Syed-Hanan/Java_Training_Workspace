package com.sutherland.library.service;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.sutherland.library.entity.UserAccount;
import com.sutherland.library.repo.UserAccountRepository;

@Service
public class UserServiceImpl implements UserService{
	@Autowired
	private UserAccountRepository userrepo;
	
	@Override
	public void addUser(UserAccount user) {
		
	userrepo.save(user);
	}
	
	@Override
	public UserAccount loginValidate(String username,String password) {
		return userrepo.findByUsernameandPassword(username,password);
	}

}
